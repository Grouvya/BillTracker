{
    "app-id": "org.grouvya.BillTracker",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.6",
    "sdk": "org.kde.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "base": "com.riverbankcomputing.PyQt.BaseApp",
    "base-version": "6.6",
    "command": "billtracker",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network",
        "--filesystem=home",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/billtracker/cargo"
        }
    },
    "modules": [
        "pypi-dependencies.json",
        {
            "name": "billtracker",
            "buildsystem": "simple",
            "build-commands": [
                "install -D Billtracker_qt.py /app/bin/billtracker",
                "cp -r icons /app/bin/",
                "install -D billtracker.png /app/bin/billtracker.png",
                "install -D billtracker_512.png /app/share/icons/hicolor/512x512/apps/org.grouvya.BillTracker.png",
                "install -D org.grouvya.BillTracker.desktop /app/share/applications/org.grouvya.BillTracker.desktop",
                "install -D org.grouvya.BillTracker.metainfo.xml /app/share/metainfo/org.grouvya.BillTracker.metainfo.xml",
                "install -D README.md /app/bin/README.md",
                "install -D README_GE.md /app/bin/README_GE.md",
                "chmod +x /app/bin/billtracker"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "Billtracker_qt.py"
                },
                {
                    "type": "dir",
                    "path": "icons",
                    "dest": "icons"
                },
                {
                    "type": "file",
                    "path": "billtracker.png"
                },
                {
                    "type": "file",
                    "path": "billtracker_512.png"
                },
                {
                    "type": "file",
                    "path": "org.grouvya.BillTracker.desktop"
                },
                {
                    "type": "file",
                    "path": "org.grouvya.BillTracker.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "README.md"
                },
                {
                    "type": "file",
                    "path": "README_GE.md"
                }
            ]
        }
    ]
}